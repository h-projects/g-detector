{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],

    "module": "esnext",
    "moduleResolution": "bundler",

    "verbatimModuleSyntax": true,
    "isolatedDeclarations": true,
    "declaration": true,

    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true
  }
}
